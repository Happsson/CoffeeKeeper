<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nu.geeks.coffeekeeper.CreateRecipe">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/createRecipeRelLayout">

            <Button
                android:id="@+id/bSave"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/next"
                android:layout_marginBottom="50dp"

                android:padding="0dp" />


            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="100dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"

                    >

                    <TextView
                        android:id="@+id/tName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:textColor="@android:color/white"
                        android:text="Set the name of your recipe"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_marginLeft="10dp" />

                    <EditText
                        android:id="@+id/eName"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="20dp"
                        android:textColor="@android:color/white"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:hint="name" />

                    <TextView
                        android:id="@+id/tComment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="50dp"
                        android:textColor="@android:color/white"
                        android:text="Add a comment, if you want to."
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_marginLeft="10dp" />

                    <EditText
                        android:id="@+id/eComment"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="10dp"
                        android:textColor="@android:color/white"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:hint="comment" />

                    <TextView
                        android:id="@+id/tCoffeetype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="50dp"
                        android:textColor="@android:color/white"
                        android:text="What kind of coffee?"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_marginLeft="10dp" />

                    <EditText
                        android:id="@+id/eCoffeetype"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="10dp"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:hint="coffe" />

                    <TextView
                        android:id="@+id/tCoffeeamount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="50dp"
                        android:text="Set amount of coffee (in grams)"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_marginLeft="10dp" />


                    <EditText
                        android:id="@+id/npCoffee"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="10dp"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:inputType="numberDecimal"
                        android:hint="10"
                        android:text="10" />

                    <TextView
                        android:id="@+id/tWaterAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:textColor="@android:color/white"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="50dp"
                        android:text="Set amount of water (in cl)"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_marginLeft="10dp" />

                    <EditText
                        android:id="@+id/npWater"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="10dp"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:inputType="numberDecimal"
                        android:hint="10"
                        android:text="10" />

                    <TextView
                        android:id="@+id/tGrindsetting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="50dp"
                        android:text="Set coffee grinder setting"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_marginLeft="10dp" />

                    <EditText
                        android:id="@+id/npGrind"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="10dp"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:inputType="numberDecimal"
                        android:hint="10"
                        android:text="10" />

                    <TextView
                        android:id="@+id/tTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:textColor="@android:color/white"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="50dp"
                        android:text="Set water temperature"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_marginLeft="10dp" />

                    <EditText
                        android:id="@+id/npTemp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="10dp"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:inputType="time"
                        android:text="10" />

                    <TextView
                        android:id="@+id/tBrewttimers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="50dp"
                        android:text="Set up to three \n brew times"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_marginLeft="10dp" />

                    <EditText
                        android:id="@+id/tpBrew1Comment"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="50dp"
                        android:imeOptions="actionDone"
                        android:hint="Comment for first brew time"
                        android:singleLine="true"
                        android:layout_marginLeft="10dp" />
                    <EditText
                        android:id="@+id/tpBrew1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="10dp"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:inputType="time"
                        android:text="00:00" />

                    <EditText
                        android:id="@+id/tpBrew2Comment"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="50dp"
                        android:imeOptions="actionDone"
                        android:hint="Comment for second brew time"
                        android:singleLine="true"
                        android:layout_marginLeft="10dp" />
                    <EditText
                        android:id="@+id/tpBrew2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="10dp"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:inputType="time"
                        android:text="00:00" />

                    <EditText
                        android:id="@+id/tpBrew3Comment"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="50dp"
                        android:imeOptions="actionDone"
                        android:hint="Comment for third brew time"
                        android:singleLine="true"
                        android:layout_marginLeft="10dp" />
                    <EditText
                        android:id="@+id/tpBrew3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="10dp"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:inputType="time"
                        android:text="00:00"
                        android:paddingBottom="100dp"
                        android:layout_marginBottom="100dp" />

                </LinearLayout>


            </ScrollView>




        </RelativeLayout>




</LinearLayout>

